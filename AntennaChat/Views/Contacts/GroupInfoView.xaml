            <TextBlock   x:Name="tbGroupName"   MaxWidth="134"   FontSize="14" Foreground="#333333" Text  ="{Binding  GroupName}" TextTrimming="WordEllipsis"/>
            <TextBlock Text="{Binding GroupMemberCount}" FontSize="14" Foreground="#333333"/>
